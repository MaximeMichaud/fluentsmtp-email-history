{
    "name": "maximemichaud/fluentsmtp-email-history",
    "description": "Email History for FluentSMTP - Display sent emails in WooCommerce customer account",
    "type": "wordpress-plugin",
    "require": {
        "wp-coding-standards/wpcs": "3.3.0",
        "squizlabs/php_codesniffer": "^3.8",
        "automattic/vipwpcs": "^3.0.1",
        "vena/php-cs-fixer-wordpress": "dev-main@dev",
        "phpcompatibility/phpcompatibility-wp": "^2.1"
    },
    "license": "GPL-2.0-or-later",
    "autoload": {
        "classmap": [
            "includes/"
        ]
    },
    "authors": [
        {
            "name": "Maxime Michaud",
            "email": "14856114+MaximeMichaud@users.noreply.github.com"
        }
    ],
    "minimum-stability": "stable",
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "require-dev": {
        "tareq1988/wp-php-cs-fixer": "dev-master@dev",
        "phpstan/phpstan": "^2.0",
        "szepeviktor/phpstan-wordpress": "^2.0",
        "php-stubs/woocommerce-stubs": "^10.4",
        "php-stubs/wordpress-stubs": "~6.9.0",
        "vimeo/psalm": "^6.14",
        "humanmade/psalm-plugin-wordpress": "^3.0"
    },
    "scripts": {
        "phpcs": "phpcs .",
        "phpcbf": "phpcbf .",
        "phpstan": "phpstan analyse --memory-limit=1G",
        "psalm": "psalm",
        "lint": [
            "@phpcs",
            "@phpstan",
            "@psalm"
        ]
    }
}
